<div class="app-container">
  <img id="burger-img" src="/assets/img/burger.png" alt="An image of a burger">
  <h1 id="app-header">Eat-Da-Burger!</h1>

  <div id="devourable-burgers" class="uneaten-container">
    <ul>
      {{#each burgers}}
        {{#unless this.devoured}} 
          <li class="eaten-burger">
            <p class="burger-name">{{this.burger_name}}</p>
            <button class="devour-btn" data-burger_id="{{this.id}}">Devour it!</button>
          </li>
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="eaten-container">
    <ul>
      {{#each burgers}}
        {{#if this.devoured}} 
          <li class="eaten-burger">
            <p class="burger-name">{{this.burger_name}}</p>
          </li>
        {{/if}}
      {{/each}}
    </ul>
  </div>

  <form id="burger-form" action="/api/burger" method="POST">
    <textarea id="burger-box" type="text" name="burger_name"></textarea>

    <button id="submit-btn" type="submit">Submit</button>
  </form>
</div>